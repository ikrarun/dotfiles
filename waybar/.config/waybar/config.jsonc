{
  "layer": "bottom",
  "position": "top",
  "height": 20,
  "spacing": 2,
  "exclusive": true,
  "passthrough": false,
  "fixed-center": true,
  "modules-left": ["hyprland/workspaces", "hyprland/window"],
  "modules-center": ["mpris", "clock"],
  "modules-right": [
    "privacy",
    "pulseaudio",
    "microphone",
    "brightness",
    "tray",
    "custom/notification",
    "battery",
    "custom/power"
  ],

  "bluetooth": {
    "format": "{icon}",
    "format-icons": {
      "enabled": "Ôäî",
      "disabled": ""
    }
  },

  "battery": {
    "interval": 60,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}% {time} ",
    "format-icons": ["Û∞Çé","Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ","Û∞Åø","Û∞ÇÄ","Û∞ÇÅ","Û∞ÇÇ","Û∞Åπ"],
    "max-length": 25
  },

  "custom/spotify": {
    "format": "ÔÜº { }",
    "return-type": "json",
    "on-click": "playerctl -p spotify play-pause",
    "on-click-right": "spotifatius toggle-liked",
    "on-click-middle": "playerctl -p spotify next",
    "exec": "spotifatius monitor"
  },

  "mpris": {
    "player": "spotify",
    "dynamic-order": ["artist", "title"],
    "format": "{player_icon} {dynamic}",
    "format-paused": "{status_icon} <i>{dynamic}</i>",
    "status-icons": {
      "paused": "ÔÅå"
    },
    "player-icons": {
      "default": "ÔÅã"
    }
  },

  "hyprland/workspaces": {
    "on-click": "activate",
    "format": "{id}",
    "all-outputs": true,
    "disable-scroll": false,
    "active-only": false,
    "show-special": true,
    "special-visible-only": true
  },

  "hyprland/window": {
    "format": "{title}",
    "icon-size": 12,
    "max-length": 30,
    "rewrite": {
      ".* - Mozilla Firefox": "Firefox",
      ".* - Google Chrome": "Chrome",
      ".* - Chromium": "Chromium",
      ".* - YouTube.*": "YouTube",
      ".* - Gmail.*": "Gmail",
      ".* - ChatGPT.*": "ChatGPT",
      ".* - Google Drive.*": "Drive",
      ".* - Google Docs.*": "Docs",
      ".* - Google Calendar.*": "Calendar",
      ".* - Stack Overflow.*": "StackOverflow",
      ".* - Reddit.*": "Reddit",
      ".* - Twitter.*": "Twitter",
      ".* - Facebook.*": "Facebook",
      ".* - Visual Studio Code": "VS Code",
      ".* - Spotify.*": "Spotify",
      ".* - Discord.*": "Discord",
      ".* - Slack.*": "Slack",
      ".* - Terminal.*": "Terminal",
      ".* - Alacritty.*": "Terminal",
      ".* - Thunderbird.*": "Mail",
      ".* - LibreOffice Writer.*": "LibreWriter",
      ".*Hyprland.*": "Hyprland",
      ".*Waybar.*": "Waybar",
      "^(.*?) - .*": "$1"
    }
  },

  "tray": {
    "show-passive-items": true,
    "spacing": 5
  },

  "clock": {
    "format": "{:%a, %B %d, %Y (%R)}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode"
    }
  },

  "pulseaudio": {
    "format": "{icon}{volume}%",
    "format-muted": "<span style='color:#ff5555;'>üîá muted</span>",
    "format-icons": {
      "headphone": "Óπò",
      "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® ", "ÔÄ® "]
    },
    "on-click": "pavucontrol",
    "scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
    "scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%"
  },

  "microphone": {
    "format": "{icon}",
    "format-muted": "<span style='color:#ff5555;'>üîá</span>",
    "format-icons": {
      "muted": "üîá",
      "default": "üé§"
    },
    "on-click": "~/.config/waybar/scripts/mic-toggle.sh"
  },

  "brightness": {
    "format": "{icon} {percentage}%",
    "format-icons": {
      "default": "‚òÄÔ∏è"
    },
    "on-click": "brightnessctl set 10%+",
    "on-click-right": "brightnessctl set 10%-",
    "scroll-up": "brightnessctl set +5%",
    "scroll-down": "brightnessctl set 5%-"
  },

  "custom/sep": {
    "format": "|",
    "tooltip": false
  },

  "custom/power": {
    "tooltip": false,
    "on-click": "wlogout -p layer-shell &",
    "format": "‚èª"
  },

  "custom/notification": {
    "escape": true,
    "exec": "swaync-client -swb",
    "exec-if": "which swaync-client",
    "format": "{icon}",
    "format-icons": {
      "none": "Û∞Ö∫",
      "notification": "Û∞°ü"
    },
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "return-type": "json",
    "tooltip": false
  }
}
